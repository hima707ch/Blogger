<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Blogger</title>
    <link rel="stylesheet" href="/public/style2.css">
    <!-- CSS only 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    -->

</head>

<body>
    <header>
        <h1>Blogger</h1>
    </header>
    <br>

    <div class="home1">
        <div class="home" style="display: block ;">
            <!--
        <a href="/sign-in"> <button class="btn">Sign In </button></a>
        <br>
        <a href="/"> <button class="btn"> Sign Up</button> </a>
        -->
            <p>Name : <%= name %>
            </p>
            <p>E-mail : <%= email %>
            </p>
            <br><br><br>

            <form method="post" action="/profile/<%= email %>">
                <p>Title : </p> <input name="title"><br>
                <p>Content : </p> <textarea name="text" rows="3"></textarea>
                <button type="submit" class="btn">Compose</label>
            </form>
        </div>
        <p><br>
            
            <center><h2>Go Back !</h2><br><br><a href="/sign-in"> <button class="btn3" style="display:inline ;">Sign In </button></a>
                &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                <a href="/"> <button class="btn3" style="display:inline ;"> Sign Up</button> </a>
            </center>
        </p>
        <br><br>
    </div>
    </div>




    <div class="content">
<h1> Your Blogs </h1>
        <% arr.forEach(function(x){ %>
            <div class="note">
                <h1>
                    <%= x.title %>
                </h1>
                <p>

                    <%= x.text.substring(0,400) %>
                        <%if(x.text.length> 400) { %> ...
                            <% } %>

                </p>
                <a href="/profile/<%= email %>/<%=x.arr_id%>"><button>Read More</button></a>
                <a href="/profile/<%= email %>/<%=x.arr_id%>/delete"><button> Delete </button></a>

            </div>
            <% }) %>
    </div>



</body>

</html>